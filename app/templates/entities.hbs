<h2>Entities</h2>
<p class="lead">Everything you ever wanted to know about entities.</p>

<hr/>

<div class="inner-content">

    <form class="form-inline">
        <div class="form-group">
            <label for="type">Type: </label>
            {{#x-select id="type" class="form-control" value=type action=(action "selectType") as |xs|}}
                {{#each types as |type|}}
                    {{#xs.option value=type}}{{type}}{{/xs.option}}
                {{/each}}
            {{/x-select}}
        </div>
        <div class="form-group">
            {{#each alphabet as |ch|}}
                <a class="alphabet-char{{if (eq ch char) ' btn btn-success' ''}}" href="#" {{action 'selectChar' ch}}>{{ch}}</a>
            {{/each}}
        </div>
    </form>

    <hr />

    {{#if entities.length}}
        <div class="row">
            {{#each entities as |entity|}}
                <div class="col-sm-4">
                    <img class="card-img-top" src={{entity.depiction}} style="width:100%" alt="Card image cap">
                    <div class="card" style="width: 20rem;">
                        <div class="card-block">
                            <h4 class="card-title">Card title</h4>
                            <p class="card-text">
                                Some quick example text to build on the card title and make up the bulk of the card's content.
                            </p>
                        </div>
                        <div class="card-block">
                            <a href="#" class="card-link">Card link</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p>No entities.</p>
    {{/if}}

</div>
